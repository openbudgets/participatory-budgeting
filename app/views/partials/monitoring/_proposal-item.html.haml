.card
  .card-header.proposal-budget
    %strong
      = number_to_currency(proposal.budget, unit: '', precision: 2, format: "%n %u")
    â‚¬
  .card-block.row 
    .col-lg-9
      - unless controller.action_name == 'show'
        %a.proposal-title{ href: admin_proposal_path(proposal.id), title: proposal.title }
          %h3
            = proposal.title
      - else
        .proposal-title
          %h3
            = proposal.title
      - unless proposal.description.blank?
        - if controller.action_name == 'show'
          %p.proposal-description
            = proposal.description
        - else
          %p.proposal-description
            = truncate(proposal.description, length: 230, separator: ' ')
      %a.btn.btn-outline-primary.btn-sm.more-info-btn{ href: '', title: 'Votes' }
        Votes: #{proposal.votes}
      %a.btn.btn-outline-primary.btn-sm.more-info-btn{ href: '', title: 'Status', class: proposal.status }
        = proposal.status.to_s.humanize
    .col-lg-12
      = render 'partials/proposal-classifiers-list', classifiers: proposal.classifiers
      - unless controller.action_name == 'show'
        = render 'partials/monitoring/proposal-monitor-btn', proposal: proposal
  - if controller.action_name == 'show'
    .card-block.row
      = render 'partials/monitoring/proposal-comments', proposal: proposal