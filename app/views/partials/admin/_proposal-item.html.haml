.card
  .card-block.row
    .col-lg-9
      .card-header.proposal-budget
        %strong
          = number_to_currency(proposal.budget, unit: '', precision: 2, format: "%n %u")
        â‚¬
      - unless controller.action_name == 'show'
        %a.proposal-title{ href: admin_proposal_path(proposal.id), title: proposal.title }
          %h3
            = proposal.title
      - else
        .proposal-title
          %h3
            = proposal.title
      - unless proposal.description.blank?
        - if controller.action_name == 'show'
          %p.proposal-description
            = proposal.description
        - else
          %p.proposal-description
            = truncate(proposal.description, length: 230, separator: ' ')
      %a.btn.btn-outline-primary.btn-sm.more-info-btn{ href: '', title: _('Votes') }
        = _('Votes: %{votes}') % { votes: proposal.votes }
      %a.btn.btn-outline-primary.btn-sm.more-info-btn{ href: '', title: _('Status'), class: proposal.status }
        = _(proposal.status.to_s.humanize)
    .col-lg-3
      - if proposal.image.present?
        = image_tag proposal.image_url, class: 'proposal-image', style: 'width: 100%; height: auto;'
    .col-lg-12
      = render 'partials/proposal-classifiers-list', classifiers: proposal.classifiers
      = render 'partials/admin/proposal-edit-btn', proposal: proposal