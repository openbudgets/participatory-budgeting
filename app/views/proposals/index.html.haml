.container
  .row
    .col-md-4.col-lg-3
      = render 'partials/proposals-filter'
    .col-md-8.col-lg-9
      .proposals-cont
        - @proposals.each do |proposal|
          .proposal{ id: 'proposal-'+proposal.id.to_s, data: { budget: proposal.budget } }
            = render 'partials/proposal-item', proposal: proposal
        #proposals-filter-empty.alert.alert-danger
          There are no proposals for those filters
