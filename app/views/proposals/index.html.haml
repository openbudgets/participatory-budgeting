= render 'partials/page-title', title: 'Vote your favourite proposals'

.vote-header
  .container
    .vote-progress
      .row
        .col-md-4.col-lg-3
          %a#vote-finish.btn.btn-block.btn-primary.disabled{href: summarize_proposals_path, role: 'button'} Finish
        .col-md-8.col-lg-9
          .vote-progress-title
            Total amount
          %progress.progress.vote-progress-bar{ value: 0, max: 100 }
            .progress 
              %span.progress-bar{ style: 'width: 0%;' }
          .vote-progress-amount{ data: { max_amount: @campaign_budget } }
