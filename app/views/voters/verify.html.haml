= render 'partials/page-title', title: _('Please provide your name')

.voters-new.container
  .row
    .col-lg-8.offset-lg-2
      .card
        .card-block
          = form_for @voter, as: :voter, url: voter_path(@voter), method: :patch, class: 'voters-new' do |f|
            .form-group
              = f.label _('Name')
              = f.text_field :name, class: 'form-control'
            = f.submit _('Continue'), class: 'btn btn-primary'